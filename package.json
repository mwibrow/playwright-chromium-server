{
  "name": "playwright-chromium-server",
  "version": "1.0.0",
  "description": "Run playwright as a server",
  "main": "src/server.js",
  "scripts": {
    "start": "npx nodemon"
  },
  "author": "Mark Wibrow",
  "license": "Apache-2.0",
  "dependencies": {
    "http-proxy": "^1.18.1",
    "nodemon": "^2.0.7",
    "playwright-chromium": "^1.12.2"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "prettier": "^2.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "delay": 2500
  }
}
